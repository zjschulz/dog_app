<h2>Add New Walk for Volunteer <%= @volunteer.name %></h2>

<p><%= render partial: '/errors', locals: { record: @walk } %></p>

<%= form_for @walk do |t| %>
    <%= t.label :dog %>
    <div><%= t.collection_select :dog_id, Dog.all, :id, :name, prompt: true %></div>
    <%= t.label :Duration %> (in minutes)
    <div><%= t.number_field :duration %></div>
    <%= t.label :Date %>
    <div><%= t.date_field :date %></div>
    <%= t.hidden_field :volunteer_id, value: @volunteer.id %>
    <%= t.submit "Create Walk" %>
<% end %>